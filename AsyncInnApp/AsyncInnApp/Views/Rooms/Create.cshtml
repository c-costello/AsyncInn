@model AsyncInnApp.Models.Room

@{
    ViewData["Title"] = "Create";
}
@{
    Layout = "_Layout";
}

<h1>Create</h1>

<h4>Room</h4>
<hr />
<section class="form-holder">

    <div>
        <div class="form">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" ></div>
                <div>
                    <div>
                        <label asp-for="Name"></label>
                        <input asp-for="Name"/>
                    </div>
                    <span asp-validation-for="Name"></span>
                </div>
                <div>
                    <div>
                        <label asp-for="Layout"></label>
                        <select asp-for="Layout" asp-items="@Html.GetEnumSelectList<AsyncInnApp.Models.Room.LayoutType>()"></select>
                    </div>
                    <span asp-validation-for="Layout" class="text-danger"></span>
                </div>
                <div class="button-div">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="back">
        <a asp-action="Index">Back to List</a>
    </div>
</section>


